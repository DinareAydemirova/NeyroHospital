@model List<Doctor>
<div class="row">
    <div class="coll-12">
        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-header">Doctors</h5>

                <a asp-action="Create" class="btn btn-secondary text-white" style="margin-right:20px;">Add</a>
            </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Full Name</th>
                                <th>Department</th>
                                <th>Phone</th>

                                <th>Status</th>
                                <th style="text-align:right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Doctor item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/assets/img/@item.Image" style="width:80px; height:80px;object-fit:cover" />
                                    </td>
                                    <td>
                                        @item.FullName
                                    </td>

                                    <td>
                                        @item.Department.Name
                                    </td>


                                    <td>
                                        @item.Phone
                                    </td>


                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger">Not Working</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Working</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="badge bg-warning text-white" style="margin-right:5px">Detail</a>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="badge bg-primary text-white" style="margin-right:2px;height:min-content">Update</a>
                                            @if (item.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="badge bg-success text-white">Activate</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="badge bg-danger text-white">Deactivate</a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

